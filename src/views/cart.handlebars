<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tu Carrito</title>
</head>
<body>
  <h1>Tu Carrito</h1>

  <ul>
    {{#each cart.products}}
    <li>
      <h2>{{this.title}}</h2>
      <p>Precio: ${{this.price}}</p>
      <p>Cantidad: {{this.quantity}}</p>

      <form method="POST" action="/api/carts/update/{{this._id}}">
        <input type="number" name="quantity" value="{{this.quantity}}" min="1" />
        <button type="submit">Actualizar cantidad</button>
      </form>

      <form method="POST" action="/api/carts/remove/{{this._id}}">
        <button type="submit">Eliminar del carrito</button>
      </form>
    </li>
    {{/each}}
  </ul>

  <h2>Total: ${{cart.total}}</h2>

  <form method="POST" action="/api/purchase">
    <button type="submit">Finalizar Compra</button>
  </form>

  <div>
    <a href="/products">Continuar Comprando</a>
  </div>
</body>
</html>
